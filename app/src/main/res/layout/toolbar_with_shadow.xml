<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:paddingTop="24dp"
    android:background="@drawable/shape_bottom_30dp"
    android:layout_height="wrap_content"
    android:minHeight="92dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginHorizontal="46dp"
            android:maxLines="1"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/silver_4e4e4e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_arrowBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_back_black"
            android:layout_width="21dp"
            android:layout_height="14dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_subTitle"
        app:layout_constraintStart_toStartOf="@+id/cl_title"
        app:layout_constraintEnd_toEndOf="@+id/cl_title"
        app:layout_constraintTop_toBottomOf="@+id/cl_title"
        app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginVertical="6dp"
        app:layout_constraintVertical_bias="0"
        android:textColor="@color/red_FB5EA0"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>