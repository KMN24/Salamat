<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Salamat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_cf1066</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView" >
        <item name="android:background">@drawable/shape_top_radius_10</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_top_radius_10</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--DatePicker-->
    <style name="DatePickerDarkDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red_cf1066</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/silver_4e4e4e</item>    <!--days of the week-->
    </style>

    <style name="ThemeEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="DoctorsAppointmentRegisteredDataTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DoctorsAppointmentRegisteredData">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">14sp</item>
    </style>
//textStyle for viewHolder of testAdapter
    <style name="TextTestStyleViewHolder">
            <item name="android:textSize">
                14sp
            </item>
            <item name="android:textColor">
                #4E4E4E
            </item>
        </style>

    <!-- Alert Dialog -->
    <style name="AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_ffffff_rad_16dp</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ProfileTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_ffffff</item>
        <item name="fontFamily">@font/roboto_regular</item>

    </style>

    <!-- Roboto Font -->
    <style name="tv_RobotoStyle">
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:textColor">
            #D1D1D1
        </item>
    </style>

    // DatePicker DoctorAppointment
    <style name="DoctorAppointmentDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_6294F3</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/silver_4e4e4e</item>    <!--days of the week-->
        <item name="android:colorControlActivated">@color/violet_B454DA</item>
    </style>

    <style name="DatePickerButton" >
        <item name="android:textColor">@color/blue_6294F3</item>
    </style>

    //textStyle for testQuestion
    <style name="TextStyleTest">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            #CF1066
        </item>
    </style>
    <style name="TextStyleHintChildInfo">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/silver_9C9C9C
        </item>
    </style>

    <style name="TextStyleChildPink">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/red_cf1066
        </item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/transparent</item>
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@color/violet_876ead</item>
        <item name="tabIndicator">@drawable/rounded_shape_violet_30dp_2d99e8</item>
        <item name="tabIndicatorHeight">44dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="minHeight">44dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabTextColor">@color/silver_4e4e4e</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>